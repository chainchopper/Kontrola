# MySQL (DO NOT commit real passwords)
MYSQL_ROOT_PWD=change-me-root
MYSQL_DB=wordpressdb
MYSQL_USER=wordpressdb
MYSQL_PWD=change-me

# Optional: enable compose profiles (e.g., "dev,kontrola" or "dev,kontrola,trends,cache")
# Available profiles: dev, kontrola, trends, cache, milvus, chroma, qdrant, pgvector, minio
COMPOSE_PROFILES=dev

# Kontrola (optional wiring)
KONTROLA_AGENT_URL=http://kontrola-agent:8000
KONTROLA_AGENT_SHARED_SECRET=change-me-shared-secret
OPENAI_API_KEY=

# TrendRadar (optional, compose profile: "trends")
# The TrendRadar containers run a crawler + report web UI, and optionally an MCP endpoint.
# TrendRadar now writes directly to MySQL (trendradar database on wp-db).
TRENDRADAR_TIMEZONE=UTC
TRENDRADAR_WEBSERVER_PORT=8080
TRENDRADAR_MCP_PORT=3333
TRENDRADAR_RUN_MODE=cron
TRENDRADAR_CRON_SCHEDULE=*/30 * * * *
TRENDRADAR_IMMEDIATE_RUN=true
TRENDRADAR_ENABLE_CRAWLER=true
TRENDRADAR_ENABLE_NOTIFICATION=false
TRENDRADAR_ENABLE_WEBSERVER=true
TRENDRADAR_LOCAL_RETENTION_DAYS=0
TRENDRADAR_STORAGE_HTML_ENABLED=true
TRENDRADAR_STORAGE_TXT_ENABLED=false
TRENDRADAR_STORAGE_BACKEND=mysql
TRENDRADAR_MYSQL_HOST=wp-db
TRENDRADAR_MYSQL_PORT=3306
TRENDRADAR_MYSQL_USER=wordpressdb
TRENDRADAR_MYSQL_PASSWORD=${MYSQL_PWD}
TRENDRADAR_MYSQL_DATABASE=trendradar

# Redis Caching Layer (optional, compose profile: "cache")
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Vector Database Backend Selection (configure during onboarding)
# Options: lancedb (default), milvus, chroma, qdrant, pgvector, pinecone
VECTOR_DB_BACKEND=lancedb

# LanceDB (default, embedded, no container needed)
LANCEDB_PATH=/app/data/lancedb

# Milvus (compose profile: "milvus")
MILVUS_HOST=milvus
MILVUS_PORT=19530

# Chroma (compose profile: "chroma")
CHROMA_HOST=chroma
CHROMA_PORT=8000

# Qdrant (compose profile: "qdrant")
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# PGVector (compose profile: "pgvector")
PGVECTOR_HOST=pgvector
PGVECTOR_PORT=5432
PGVECTOR_USER=kontrola
PGVECTOR_PASSWORD=change-me-pgvector
PGVECTOR_DB=vectors

# Pinecone (cloud SaaS, API-only, no container)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1

# MinIO Object Storage (compose profile: "minio")
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-me-minio
MINIO_SECURE=false

# Blueprint-aligned (optional / planned)
# These are NOT required for the current minimal stack, but are likely to appear
# as Kontrola evolves (mobile sync, stronger auth, ecommerce integrations, etc.).
MOBILE_API_KEY=
JWT_SECRET=
KONTROLA_ENCRYPTION_KEY=
PRINTFUL_API_KEY=
PRINTFUL_STORE_ID=

